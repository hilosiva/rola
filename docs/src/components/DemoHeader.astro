---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="header">
  <hgroup class="title-group">
    <h1 class="title">Rola Demo</h1>
    <p class="subtitle">– {title} –</p>
  </hgroup>
</header>

<style>
  .header {
    display: block grid;
    place-content: center;
    min-block-size: 100vb;
  }

  .title-group {
    text-align: center;
  }

  .title {
    font-size: clamp(2.5rem, 1.5854rem + 3.9024vw, 5rem);
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .subtitle {
    margin-block-start: 1.5em;
    font-size: clamp(1rem, 0.8171rem + 0.7805vw, 1.5rem);
    font-weight: 700;
    letter-spacing: 0.1em;
  }
</style>
